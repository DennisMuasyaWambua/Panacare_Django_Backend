# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# IMPORTANT: Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to version control

# ==============================================
# Django Configuration
# ==============================================
DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_MINIMUM_50_CHARACTERS_RANDOM_STRING
ENVIRONMENT=production
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com

# ==============================================
# Database Settings (Production PostgreSQL)
# ==============================================
# Option 1: Use Docker PostgreSQL (for VPS deployment)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=panacare_production
DB_USER=panacare_prod
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432

# Option 2: Use Managed Database Service (Railway, AWS RDS, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database
# DATABASE_PUBLIC_URL=postgresql://user:password@public-host:port/database

# ==============================================
# PostgreSQL Docker Configuration
# ==============================================
POSTGRES_USER=panacare_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=panacare_production

# ==============================================
# Security Settings
# ==============================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ==============================================
# CORS Configuration (Production)
# ==============================================
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=True

# ==============================================
# Email Configuration (Production SMTP)
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@your-domain.com
EMAIL_HOST_PASSWORD=your_app_specific_password
DEFAULT_FROM_EMAIL=Panacare Health <noreply@your-domain.com>
EMAIL_TIMEOUT=30

# Alternative: SendGrid (Recommended for production)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your_sendgrid_api_key

# ==============================================
# Twilio Video Consultation Configuration
# ==============================================
TWILIO_ACCOUNT_SID=your_production_twilio_account_sid
TWILIO_AUTH_TOKEN=your_production_twilio_auth_token
TWILIO_API_KEY_SID=your_production_twilio_api_key_sid
TWILIO_API_KEY_SECRET=your_production_twilio_api_key_secret

# ==============================================
# PesaPal Payment Gateway Configuration
# ==============================================
PESAPAL_CONSUMER_KEY=your_production_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_production_pesapal_consumer_secret
PESAPAL_SANDBOX=False
PESAPAL_CALLBACK_URL=https://your-domain.com/payment/callback
PESAPAL_IPN_URL=https://api.your-domain.com/api/payments/pesapal/ipn
PESAPAL_IPN_ID=your_production_ipn_id

# ==============================================
# Firebase Cloud Messaging Configuration
# ==============================================
FIREBASE_SERVICE_ACCOUNT_PATH=/app/firebase-service-account.json
# Ensure firebase-service-account.json contains production credentials

# ==============================================
# Frontend Application Configuration
# ==============================================
FRONTEND_URL=https://your-domain.com
FRONTEND_DOMAIN=your-domain.com

# ==============================================
# Static & Media Files (Cloud Storage)
# ==============================================
# Option 1: AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=panacare-media
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-bucket.s3.amazonaws.com

# Option 2: Cloudinary
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ==============================================
# Monitoring & Logging (Optional)
# ==============================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# LOG_LEVEL=INFO

# ==============================================
# Performance & Scaling
# ==============================================
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=120
# DATABASE_CONN_MAX_AGE=600

# ==============================================
# Backup & Disaster Recovery
# ==============================================
# BACKUP_S3_BUCKET=panacare-backups
# BACKUP_RETENTION_DAYS=30
