# ==============================================
# Django Configuration
# ==============================================
DEBUG=True
SECRET_KEY=your-secret-key-goes-here-change-in-production-use-minimum-50-characters
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==============================================
# Database Settings (Docker PostgreSQL)
# ==============================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=panacare_db
DB_USER=panacare
DB_PASSWORD=panacare_secure_password_change_in_production
DB_HOST=db
DB_PORT=5432

# ==============================================
# PostgreSQL Docker Configuration
# ==============================================
POSTGRES_USER=panacare
POSTGRES_PASSWORD=panacare_secure_password_change_in_production
POSTGRES_DB=panacare_db

# ==============================================
# Email Configuration
# ==============================================
# For development, use console backend to print emails to console
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=noreply@panacare.com
EMAIL_TIMEOUT=30

# ==============================================
# Twilio Video Consultation Configuration
# ==============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_API_KEY_SID=your_twilio_api_key_sid_here
TWILIO_API_KEY_SECRET=your_twilio_api_key_secret_here

# ==============================================
# PesaPal Payment Gateway Configuration
# ==============================================
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key_here
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret_here
PESAPAL_SANDBOX=True
PESAPAL_CALLBACK_URL=http://localhost:3000/payment/callback
PESAPAL_IPN_URL=http://localhost:8000/api/payments/pesapal/ipn
PESAPAL_IPN_ID=

# ==============================================
# Firebase Cloud Messaging Configuration
# ==============================================
FIREBASE_SERVICE_ACCOUNT_PATH=/app/firebase-service-account.json
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=

# ==============================================
# Frontend Application Configuration
# ==============================================
FRONTEND_URL=http://localhost:3000
FRONTEND_DOMAIN=localhost:3000

